[include]
  path = ~/Dropbox/config/gitconfig.local
  path = ~/gitconfig.local

[alias]
  history = log --all --graph --abbrev-commit --simplify-by-decoration
  graph = log --all --graph --abbrev-commit

  # reset
  unadd = reset HEAD              # remove files from index (tracking)
  uncommit = reset --soft HEAD^     # go back before last commit, with files in uncommitted state

  ghbranch = push -u origin HEAD

  br = branch -vva

  staged = diff --cached

  conflicts = diff --name-only --diff-filter=U

  prdiff = difftool origin/master

[user]
  name = Robert Fairhead
  email = bob@adhocteam.us

[color]
  ui = auto

[color "diff"]
  meta = white bold
  commit = cyan
  frag = blue bold
  old = red reverse
  new = cyan reverse
  whitespace = red
  context = 238
[color "diff-highlight"]
  oldNormal = white
  oldHighlight = red reverse
  newNormal = 248
  newHighlight = cyan reverse
[color "branch"]
  current = cyan reverse
  local = blue
  remote = magenta
[color "status"]
  branch = blue
  added = green
  changed = white
  untracked = red
[color "decorate"]
  branch = blue
  remoteBranch = magenta
  head = white
  tag = white
  stash = red

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = nvim
  # Don't prompt for commit message on merge commits
  mergeoptions = --no-edit

  # get word level highlights in diffs
  pager = diff-so-fancy | less

[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[difftool]
  prompt = false
[diff]
  tool = nvim

[fetch]
    prune = true

[push]
  default = simple

[status]
  showUntrackedFiles = all

[log]
  date = relative

[format]
  pretty = %Creset%h -%C(green)%d%C(blue) %s %C(yellow)(%cr) %C(magenta)<%an>%Creset

[help]
  autocorrect = 1

[github]
    username = robertfairhead

[url "git@github.com:"]
  insteadOf = "gh:"
  insteadOf = "git://github.com"
