# Maintainer: Robert Fairhead
pkgbase=bob
pkgname=('bob-base' 'bob-db' 'bob-docker' 'bob-fonts' 'bob-i3' 'bob-k8s' 'bob-programming')
pkgver=19.09
pkgrel=1

pkgdesc='My base collection of software to install'
arch=('any')
url='https://github.com/robertfairhead/dotfiles'
license=('MIT')

