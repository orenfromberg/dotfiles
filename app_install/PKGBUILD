        'bind-tools'
        'efibootmgr'
        'exa-git'
        'expac-git'
        'fd'
        'feh'
        'git'
        'grub'
        'htop'
        'intel-ucode'
        'iw'
        'iwd-git'
        'jq'
        'keybase-bin'
        'libu2f-host'
        'micro'
        'network-manager-applet'
        'networkmanager'
        'nmap'
        'openssh'
        'pacman-contrib'
        'picocom'
        'ripgrep'
        'tmux'
        'unzip'
        'yay'
        'zip'
    )
}

package_bob-db() {
    pkgdesc='postgresl and other db utilities'
    depends=(
        'pspg'
    )
}

package_bob-docker() {
    pkgdesc='docker and related utilities'
    depends=(
