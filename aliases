if [[ $OSTYPE == 'linux-gnu' ]]; then
	export OS="linux"

  alias ls='ls -F --color=auto'
  alias l="less"

  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
else
	export OS="osx"

  alias ls="ls -GF"
  alias l="more"
fi

if [[ $(which exa) ]]; then
  alias ls="exa -F --group-directories-first --color=auto"
  alias lsl="exa -alFgh@ --group-directories-first --git --color=auto"
else
  alias lsl="ls -ahl"
fi

alias rmd="rm -rf"

if [[ -e /Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code ]]; then
  alias edit="/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code"
elif [[ $(which code) ]]; then
  alias edit="code"
elif [[ $(which micro) ]]; then
  alias edit="micro"
else
  alias edit="nano"
fi

alias hex="hexdump -Cv"
alias hexstruct="xxd -i"

alias tcpconnections="netstat -lntp TCP"

alias vetsgov-internal="ssh socks -D 2001 -N"

# Get a sum of the total size of a file/folder in human readable units:
alias space="du -sh"

#List file sizes of a directory and any subdirectories in KB:
alias lsspace="du -k"

alias ps="ps aux"

alias jekyll-serve="docker run --rm --label=jekyll --volume=$(pwd):/srv/jekyll -it -p 127.0.0.1:4000:4000 jekyll/jekyll jekyll serve"

if [[ -f $HOME/Dropbox/config/aliases.local ]]; then
  source $HOME/Dropbox/config/aliases.local
fi
