export GOPATH=$HOME/go

if [[ -d $HOME/anaconda3 ]]; then
  CONDAPATH="$HOME/anaconda3/bin:"
else
  CONDAPATH=""
fi

if [[ -d $HOME/homebrew ]]; then
  BREWPATH="$HOME/homebrew/bin:"
else
  BREWPATH=""
fi

COMPILERS="/usr/local/go/bin:/usr/local/swift/bin"

if [[ -d $HOME/texlive/2016/bin/x86_64-darwin ]]; then
  LATEXPATH="$HOME/texlive/2016/bin/x86_64-darwin:"
else
  LATEXPATH=""
fi

export PATH="${CONDAPATH}${BREWPATH}${LATEXPATH}${PATH}:$COMPILERS:$HOME/bin:$GOPATH/bin"
