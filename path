export GOPATH=$HOME/go

if [[ -d $HOME/anaconda ]]; then
  CONDAPATH="$HOME/anaconda/bin:"
else
  CONDAPATH=""
fi

if [[ -d $HOME/homebrew ]]; then
  BREWPATH="$HOME/homebrew/bin:"
else
  BREWPATH=""
fi

if [[ -d /mnt/c/Program\ Files/Docker/Docker/resources/bin ]]; then
	DOCKERPATH="/mnt/c/Program\ Files/Docker/Docker/resources/bin:"
else
	DOCKERPATH=""
fi

COMPILERS="/usr/local/go/bin:/usr/local/swift/bin"

export PATH="${CONDAPATH}${BREWPATH}${DOCKERPATH}${PATH}:$COMPILERS:$HOME/bin:$GOPATH/bin"
