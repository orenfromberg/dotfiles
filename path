export GOPATH=$HOME/go

if [[ -d $HOME/anaconda ]]; then
  CONDAPATH="$HOME/anaconda/bin:"
else
  CONDAPATH=""
fi

if [[ -d $HOME/homebrew ]]; then
  BREWPATH="$HOME/homebrew/bin:"
else
  BREWPATH=""
fi

if [[ -d $HOME/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/ ]]; then
	VSCODEPATH="${HOME}/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/:"
elif [[ -d /Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/ ]]; then
	VSCODEPATH="/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/:"
else
	VSCODEPATH=""
fi

COMPILERS="/usr/local/go/bin:/usr/local/swift/bin"

export PATH="${CONDAPATH}${BREWPATH}${VSCODEPATH}${PATH}:$COMPILERS:$HOME/bin:$GOPATH/bin"
