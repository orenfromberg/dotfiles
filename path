export GOPATH=$HOME/go

if [[ -d $HOME/anaconda ]]; then
  CONDAPATH="$HOME/anaconda/bin:"
else
  CONDAPATH=""
fi

if [[ -d $HOME/homebrew ]]; then
  BREWPATH="$HOME/homebrew/bin:"
else
  BREWPATH=""
fi

COMPILERS="/usr/local/go/bin:/usr/local/swift/bin:"

export PATH="${CONDAPATH}${BREWPATH}${PATH}:${COMPILERS}$HOME/bin:$GOPATH/bin"
