[include]
  path = ~/Dropbox/config/gitconfig.local
  path = ~/gitconfig.local

[alias]
  history =  log --all --graph --decorate --oneline --simplify-by-decoration
  commit-history = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

  # reset
  unadd = reset HEAD              # remove files from index (tracking)
  uncommit = reset --soft HEAD^     # go back before last commit, with files in uncommitted state
  restore = git

  ghbranch = push -u origin HEAD

  br = branch -vva

  changes=diff --cached

  resolve-ours = "!grep -lr '<<<<<<<' . | xargs git checkout --ours"
  resolve-theirs = "!grep -lr '<<<<<<<' . | xargs git checkout --theirs"

  conflicts = diff --name-only --diff-filter=U

[user]
  name = Robert Fairhead
  email = bob@adhocteam.us

[color]
  ui = always
[color "diff"]
  meta = yellow bold
  commit = cyan
  frag = white bold
  old = magenta reverse
  new = cyan reverse
  whitespace = white
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = cyan
  untracked = blue

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = micro

[fetch]
    prune = true

[github]
    username = robertfairhead

[url "git@github.com:"]
  insteadOf = "gh:"
  insteadOf = "git://github.com"

[status]
  showUntrackedFiles = all

[help]
  autocorrect = 1

[push]
  default = simple
