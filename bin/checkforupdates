#!/usr/bin/env bash

function update_count {
    local ARCH_COUNT=$( checkupdates 2> /dev/null | wc -l )
    local AUR_COUNT=$( yay --aur -Pu 2> /dev/null | wc -l)

    local TOTAL=$(("$ARCH_COUNT" + "$AUR_COUNT"))

    if [[ TOTAL -gt 0 ]]; then
        echo "ïŒƒ"
    else
        echo ""
    fi

}

update_count
